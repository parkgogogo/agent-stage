{
  "name": "bridge-store",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./shared": "./dist/shared/index.js",
    "./server": "./dist/server/index.js",
    "./browser": "./dist/browser/index.js",
    "./node": "./dist/node/index.js"
  },
  "scripts": {
    "dev": "concurrently -k -n server,typecheck \"pnpm dev:server\" \"pnpm dev:typecheck\"",
    "dev:server": "tsx watch src/server/index.ts",
    "start:server": "tsx src/server/index.ts",
    "dev:typecheck": "tsc -p tsconfig.json --noEmit --watch",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "ws": "^8.18.3",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.25.1",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@types/ws": "^8.5.14",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2",
    "vitest": "^4.0.18"
  }
}
